#!/usr/bin/env bash

# Easier navigation: .., ..., ...., ....., and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# Quick command aliases
alias apps="yabai -m query --windows | jq '.[].app'"
alias cat="bat"
alias ls="exa -h"
alias m="make"
alias t="tmux"
alias v="vim"

# Quick navigation to config files
alias brc="vim ~/.bashrc"
alias als="vim ~/.aliases"
alias vrc="vim ~/.vim/vimrc"
alias yrc="vim ~/.yabairc"
alias src="vim ~/.skhdrc"
alias zrc="vim ~/.zshrc"

# verbose output for common commands
alias cp="cp -v"
alias mkdir="mkdir -v"
alias mv="mv -v"
alias rm="rm -v"
alias trash="trash -v"
alias ln="ln -v"

# ls
alias lsh="ls --color=auto" # List hidden files
alias lsa="ls -la"          # List in long format, all
alias lsd="ls -ld"  	    # List in long format, only directories

# tree
alias tree1="tree -L 1"     # Tree list, depth 1
alias tree2="tree -L 2"     # Tree list, depth 2
alias tree3="tree -L 3"     # Tree list, depth 3
alias treed="tree -d"       # Tree directories
alias treed1="tree -d -L 1" # Tree directories, depth 1
alias treed2="tree -d -L 2" # Tree directories, depth 2
alias treed3="tree -d -L 3" # Tree directories, depth 3

# Homebrew
alias brewery="brew update && brew upgrade && brew cleanup"
